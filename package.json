{
	"name": "cflaircounter",
	"version": "2.3.0",
	"description": "Ultra-lightweight serverless telemetry system for headless project tracking. Optimized for minimal Cloudflare costs.",
	"main": "functions/index.ts",
	"scripts": {
		"dev": "npm run build:worker && wrangler pages dev public --compatibility-date=2024-03-20",
		"deploy": "npm run build && wrangler pages deploy public --project-name=cflaircounter",
		"build": "npm run build:worker && tsc",
		"build:worker": "esbuild functions/index.ts --bundle --format=esm --outfile=public/_worker.js --platform=neutral --conditions=worker --minify",
		"type-check": "tsc --noEmit",
		"db:create": "wrangler d1 create cflaircounter-db",
		"db:init": "wrangler d1 execute cflaircounter-db --file=./schema.sql",
		"db:migrate": "wrangler d1 migrations apply cflaircounter-db",
		"test": "echo \"Error: no test specified\" && exit 1",
		"test:newman": "newman run ./postman/CFlairCounter.postman_collection.json -e ./postman/CFlairCounter.postman_environment.json --bail --reporters cli,json --reporter-json-export ./postman/newman-report.json",
		"test:newman:ci": "newman run ./postman/CFlairCounter.postman_collection.json -e ./postman/CFlairCounter.postman_environment.json --reporters cli,junit --reporter-junit-export ./postman/newman-junit.xml",
		"lint": "tsc --noEmit",
		"clean": "rm -rf dist node_modules/.cache"
	},
	"keywords": [
		"telemetry",
		"analytics",
		"cloudflare",
		"counter"
	],
	"author": "VKrishna04 <https://github.com/VKrishna04>",
	"license": "Apache-2.0",
	"type": "module",
	"homepage": "https://vkrishna04.github.io",
	"repository": {
		"type": "git",
		"url": "https://github.com/Life-Experimentalist/CFlair-Counter"
	},
	"bugs": {
		"url": "https://github.com/Life-Experimentalist/CFlair-Counter/issues"
	},
	"dependencies": {
		"hono": "^4.9.4"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20250826.0",
		"esbuild": "^0.27.0",
		"typescript": "^5.9.2",
		"wrangler": "^4.46.0",
		"newman": "^5.0.0"
	},
	"documentation": {
		"integration": "./INTEGRATION.md",
		"readme": "./README.md",
		"postman": "./postman/CFlairCounter.postman_collection.json",
		"changelog": "./.github/CHANGELOG.md",
		"license": "./LICENSE.md",
		"contributing": "./.github/CONTRIBUTING.md",
		"documentation": "./docs/README.md"
	}
}
